{
  "name": "couple-ai-chatbot---your-personal-learning-&-growth-partner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "dependencies": {
    "@google/genai": "^1.24.0",
    "@types/pg": "^8.15.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "googleapis": "^144.0.0",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-rnd": "^10.5.2",
    "react-zoom-pan-pinch": "^3.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^2.1.9",
    "wait-on": "^7.2.0",
    "tsx": "^4.19.2"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.0"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "db:setup": "npx tsx server/db/setupDatabase.ts",
    "db:verify": "npx tsx server/db/verifySetup.ts",
    "db:reset": "ts-node --esm server/db/resetSchema.ts",
    "db:check": "ts-node --esm server/db/checkSchema.ts",
    "db:test": "ts-node --esm server/db/testConnection.ts",
    "db:install-vector": "ts-node --esm server/db/installVectorExtension.ts",
    "db:debug": "ts-node --esm server/db/debugPassword.ts",
    "db:check-env": "ts-node --esm server/db/checkEnv.ts",
    "embedding:start": "python local_embedding_server.py",
    "embedding:install": "python -m pip install sentence-transformers fastapi uvicorn",
    "embedding:test": "curl http://localhost:8000/",
    "dev:all": "concurrently \"npm run embedding:start\" \"npm run server\" \"npm run dev\"",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "electron-builder --dir"
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "allowImportingTsExtensions": true
    }
  }
}
